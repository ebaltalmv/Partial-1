<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Parcial1_Caifanes.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Parcial1_Caifanes"
    xmlns:pages="clr-namespace:Parcial1_Caifanes.Pages"
    Shell.FlyoutBehavior="Disabled"
    
    Title="Parcial1_Caifanes">

    <TabBar>
        <Tab Route="MainPage"
             Title="Caifanes"
             Icon="icon_caifanes.png">
            <ShellContent
                          Title="Caifanes"
                          ContentTemplate="{DataTemplate pages:MainPage}"/>
        </Tab>

        <Tab Route="BiographyPage"
             Title="Biography"
             Icon="icon_caifanes.png">
            <ShellContent
              Title="Biography"
              ContentTemplate="{DataTemplate pages:BiographyPage}"/>
        </Tab>

        <Tab Route="DiscographyPage"
             Title="Discography"
             Icon="icon_caifanes.png">
            <ShellContent
              Title="Discography"
              ContentTemplate="{DataTemplate pages:DiscographyPage}"/>
        </Tab>

        <Tab Route="ConcertsPage"
             Title="Cencerts"
             Icon="icon_caifanes.png">
            <ShellContent
              Title="Cencerts"
              ContentTemplate="{DataTemplate pages:ConcertsPage}"/>
        </Tab>
        
    </TabBar>

</Shell>
