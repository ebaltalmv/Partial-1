<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Parcial1_Caifanes.Pages.MainPage">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0A0A0A" Offset="0.1"/>
            <GradientStop Color="#4B0082" Offset="0.6"/>
            <GradientStop Color="#8B0000" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <VerticalStackLayout
                         Padding="30,0"
                         Spacing="25">
        <Image
               Source="caifaneslogo.png"
               HeightRequest="500"
               Aspect="AspectFit"/>
    </VerticalStackLayout>
</ContentPage>
