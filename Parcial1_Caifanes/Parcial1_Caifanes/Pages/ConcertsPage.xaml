<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Parcial1_Caifanes.Pages.ConcertsPage">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0A0A0A" Offset="0.1"/>
            <GradientStop Color="#4B0082" Offset="0.6"/>
            <GradientStop Color="#8B0000" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <Grid RowSpacing="15" ColumnSpacing="15" Padding="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0"
                   Text="2026 CAIFANES"
                   FontSize="Title"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   Margin="10"/>

            <ListView Grid.Row="1"
                      x:Name="concertList"
                      ItemSelected="OnConcertSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Padding="10">
                                <Image Source="{Binding ImageUrl}" WidthRequest="80" HeightRequest="80" Aspect="AspectFill"/>
                                <StackLayout Orientation="Vertical" Margin="10,0">
                                    <Label Text="{Binding Date}" FontSize="Medium" FontAttributes="Bold"/>
                                    <Label Text="{Binding Name}" FontSize="Small"/>
                                </StackLayout>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Label Grid.Row="2"
                   Text="MÃS EVENTOS PROXIMAMENTE..."
                   FontSize="18"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
            
        </Grid>
    </ScrollView>
</ContentPage>